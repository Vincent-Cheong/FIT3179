{
  "$schema"  : "https://vega.github.io/schema/vega-lite/v4.json",
  "title"    : "Mean Confirmed Cases by WHO Region",
  "data"     : {"url": "https://raw.githubusercontent.com/Vincent-Cheong/FIT3179/main/Covid-19.csv"},
  "width"    : 375,
  "height"   : 250,
  "config"   : {"view": {"stroke": "transparent"}},
  
  "transform": [{"aggregate": [{"op": "mean", "field": "Confirmed Cases", "as": "Mean CC"}],
                 "groupby"  : ["WHO Region"]}],

  "encoding" : {"x": {"field": "Mean CC",
                      "type" : "quantitative",
                      "axis" : null},

                "y": {"field": "WHO Region",
                      "type" : "nominal",
                      "axis" : {"title": null, "ticks": false, "labelPadding": 10}}},
  
  "layer"    : [{"mark"    : {"type": "bar", "color": "skyblue"}},

                {"mark"    : {"type": "text", "dx": 25},
                 "encoding": {"text": {"field": "Mean CC", "format": "0.0f"}}}]
}
